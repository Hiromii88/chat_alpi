<!-- app/views/new.html.erb -->
<h1 class="text-3xl font-bold text-center mb-4">ログイン</h1>

<div class="container mx-auto px-4 py-6">
  <div class="max-w-sm mx-auto bg-white p-6 rounded-lg shadow-md">
    <% if flash[:alert] %>
      <div class="bg-red-500 text-white p-3 rounded mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with url: login_path, method: :post do %>
      <div class="mb-4">
        <%= label_tag :email, "メールアドレス", class: "block text-sm font-semibold mb-1" %>
        <%= text_field_tag :email, nil, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "メールアドレスを入力" %>
      </div>

      <div class="mb-4">
        <%= label_tag :password, "パスワード", class: "block text-sm font-semibold mb-1" %>
        <%= password_field_tag :password, nil, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "パスワードを入力" %>
      </div>

      <div class="mb-4">
        <%= submit_tag "ログイン", class: "w-full py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= link_to "パスワードをお忘れですか？", "#", class: "text-blue-500 hover:text-blue-700" %>
    </div>
  </div>
</div>
